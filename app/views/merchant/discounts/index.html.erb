<h1>My Discounts</h1>

<h2><%= link_to "Create New Discount", "/merchant/discounts/new" %></h2>

<section class="grid-container">

<% @merchant.discounts.each do |discount| %>
  <section class = "grid-item">
    <h2>Discount #<%= discount.id %></h2>
    <p>Percentage off: <%= number_to_percentage(discount.percent, strip_insignificant_zeros: true) %> off</p>
    <p>Qualifying Amount: <%= discount.quantity %> items</p>
    <p><%= link_to "Edit", "/merchant/discounts/#{discount.id}/edit" %></p>
  </section>
<% end %>
</section>
